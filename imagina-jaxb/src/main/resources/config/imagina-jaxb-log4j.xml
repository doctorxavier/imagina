	<logger name="com.imagina">
		<level value="debug" />
	</logger>
	
	<logger name="test.imagina">
		<level value="debug" />
	</logger>
	
	<logger name="org.springframework">
		<level value="error" />
	</logger>
	
	<root>
		<level value="info" />
		<appender-ref ref="File" />
		<appender-ref ref="Console" />
	</root>

</log4j:configuration>
